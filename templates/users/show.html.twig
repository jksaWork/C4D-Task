{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>name</th>
                <td>{{ user.profile.name }}</td>
            </tr>

            <tr>
                <th>email</th>
                <td>{{ user.email}}</td>
            </tr>
            <tr>
                <th>age</th>
                <td>{{ user.profile.age }}</td>
            </tr>
            <tr>
                <th>address</th>
                <td>{{ user.profile.address }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_users') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
    <form
                 action="{{ path('users_delete',  {'id': user.id}) }}" method="post"
                >
                <button type="submit">delete</botton>
                </form>
    {# {{ include('user/_delete_form.html.twig') }} #}
{% endblock %}
